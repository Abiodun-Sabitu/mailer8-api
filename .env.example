# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mailer8_db?schema=public"

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
REFRESH_SECRET=your_refresh_secret_key_here_also_make_it_long_and_secure
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
MAIL_FROM="Birthday Bot <no-reply@yourcompany.com>"

# Cron Job Configuration
FIXED_CRON_TIME=07:00  # Fixed daily cron time (HH:MM format)

# Timezone Configuration
TZ=Africa/Lagos  # Fixed cron timezone (flexible cron uses database timezone)